<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="generator" content="{{ eleventy.generator }}">


    <title>
      {% if title %}
        {{ title | escape }} |
      {% endif %}
      {{ site.title | escape }}</title>

    <meta name="description" content="{% if description %}{{ description | strip_html | strip_newlines | truncate: 160 }}{% else %}{{ site.description }}{% endif %}">

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {%- if noindex -%}
      <meta name="robots" content="noindex, nofollow">
    {%- endif -%}

    {%- if canonical -%}
      <link rel="canonical" href="{{ canonical }}">
    {%- else -%}
      <link rel="canonical" href="{{ env.baseUrl }}{{ page.url }}">
    {%- endif -%}

    <link
    rel="icon"
      href="/assets/images/icons/favicon.ico"
      sizes="any">
    <!-- 32×32 -->
    <link
      rel="icon"
      href="/assets/images/icons/icon.svg"
      type="image/svg+xml">
    <link rel="apple-touch-icon" href="/assets/images/icons/apple-touch-icon.png">
    <!-- 180×180 -->
    <link rel="manifest" href="/assets/images/icons/manifest.webmanifest">


    {%- if styles -%}
      {% for style in styles %}
        <link
          rel="stylesheet"
          href={{ style | prepend: "/css/" }}
          media="all">
      {% endfor %}
    {%- endif -%}

    {%- if page.style -%}
      <style>
        {{ page.style }}
      </style>
    {%- endif -%}


    {%- if scripts -%}
      {% for script in scripts %}
        <script
          src={{ script | prepend: "/js/" }}
          type="module"
          defer></script>
      {% endfor %}
    {%- endif -%}

  </head>

  <body class="flex flex-col min-h-screen bg-pink-200">

    <section id="Header-Section" class="flex justify-center bg-teal-300 ">
      {% render "header" %}
    </section>


    <section id="main-section" class="flex justify-center bg-yellow-100 grow">
      <main class="flex max-w-screen-xl bg-gray-300 grow ">
        {{ content }}
      </main>
    </section>


    <section id="Footer-Section" class="flex justify-center bg-amber-400 ">
      {% render "footer" %}
    </section>
  </body>

</html>