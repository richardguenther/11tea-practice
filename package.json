{
  "name": "11tea",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.0",
    "alpinejs": "^3.12.0",
    "esbuild": "^0.17.17",
    "html-minifier-terser": "^7.2.0",
    "lightningcss": "^1.19.0",
    "tailwindcss": "^3.3.1",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "tailwindcss-dev": "npx tailwindcss tailwind-input.css -o _public/assets/css/tailwind.css --watch",
    "tailwindcss": "npx tailwindcss tailwind-input.css -o _public/assets/css/tailwind.css --minify",

    "11ty-dev": "ELEVENTY_ENV=production eleventy --serve --incremental",
    "11ty-stage": "ELEVENTY_ENV=stage eleventy",
    "11ty-prod": "ELEVENTY_ENV=prod eleventy",

    "start": "npm-run-all -p 11ty-dev tailwindcss-dev",
    "stage": "npm-run-all -s tailwindcss 11ty-stage",
    "build": "npm-run-all -s tailwindcss 11ty-prod"
  }

}
